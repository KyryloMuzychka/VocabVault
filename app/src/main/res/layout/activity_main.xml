<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data tools:ignore="ExtraText">
        <variable
            name="viewModel"
            type="com.example.vocabvault.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ListView
            android:id="@+id/wordsListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/addButton"
            android:layout_marginBottom="20dp"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:background="#FFFFFF"
            android:visibility="@{viewModel.visibility}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/originalWordEdit"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:autofillHints="originalWord"
            android:ems="10"
            android:gravity="start"
            android:hint="@{viewModel.originalWordHint}"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:minHeight="48dp"
            android:visibility="@{viewModel.visibility}"
            app:layout_constraintBottom_toTopOf="@+id/translatedWordEdit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/translatedWordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/originalWordEdit"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:autofillHints="originalWord"
            android:ems="10"
            android:gravity="start"
            android:hint="@{viewModel.translatedWordHint}"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:minHeight="48dp"
            android:visibility="@{viewModel.visibility}"
            app:layout_constraintBottom_toTopOf="@+id/addButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck,VisualLintTextFieldSize" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@{viewModel.addText}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck,VisualLintButtonSize" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>